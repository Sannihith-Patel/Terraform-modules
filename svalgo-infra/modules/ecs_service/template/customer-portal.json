[{
    "name": "customer-portal",
    "image": "${aws_account}.dkr.ecr.${aws_region}.amazonaws.com/${ecr_repo}:${image_tag}",
    "cpu": 0,
    "portMappings": [
        {
            "name": "svalgo-customer-portal-80-tcp",
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp",
            "appProtocol": "http"
        }
    ],
    "essential": true,
    "environment": [
        {"name": "ALGO_RUN_ENV", "value": "${environment}"}
    ],
    "environmentFiles": [],
    "mountPoints": [],
    "volumesFrom": [],
    "ulimits": [],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${loggroup}",
            "awslogs-create-group": "true",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
    },
    "systemControls": []
}
]